{
  "version": 2,
  "installCommand": "cd client && (npm ci || npm install --include=dev)",
  "buildCommand": "cd client && npm run build",
  "builds": [
    { "src": "client/api/**/*.py", "use": "@vercel/python" },
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "headers": [
    { "source": "/index.html", "headers": [ { "key": "Cache-Control", "value": "no-store" } ] },
    { "source": "/", "headers": [ { "key": "Cache-Control", "value": "no-store" } ] }
  ],
  "rewrites": [
    { "source": "/api/:match*", "destination": "/api/:match*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
